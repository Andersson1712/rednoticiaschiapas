          <%= form.text_area :description, id: :article_description, class:"form-control center-xs",require: true %>
          <%=  form.label :description,"Descripción" %>
        </div>
        <div class="contenedor">
        <div class="middle-xs col-xs-12 col-md-12">
        <div>
          <%= form.submit "Crear", class:"btn top-space"  %>
